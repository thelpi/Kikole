@model ClubCreationModel

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div style="color:crimson; margin-top: 10px">Error: @Model.ErrorMessage</div>
}
else if (!string.IsNullOrWhiteSpace(Model.InfoMessage))
{
    <div style="color:forestgreen; margin-top: 10px">@Model.InfoMessage</div>
}

    <form method="post" action="/Admin/Club">
        <div style="margin-top: 20px">
            <div>
                <label>First, checks if the club already exists, type some text:</label>
            </div>
            <script>
                $(function () {
                    $("#clubName").autocomplete({
                        source: function (request, response) {
                            $.ajax({
                                url: '/Admin/AutoCompleteClubs/',
                                data: {
                                    "prefix": request.term
                                },
                                type: "POST",
                                success: function (data) {
                                    response($.map(data, function (item) {
                                        return item;
                                    }))
                                }
                            });
                        },
                        select: function (e, i) {
                            $("#clubName").val(i.item.value);
                        },
                        minLength: 1
                    });
                });
            </script>
            <div>
                <input type="text" name="dummyClub" id="clubName" style="width: 250px" />
            </div>
        </div>
        <div style="margin-top: 20px">
            <div><label>Main name</label></div>
            <input type="text" name="MainName" style="width: 250px" />
        </div>
        <div style="font-size: smaller">(use the Wikipedia title in english)</div>
        <div style="font-size: smaller">(ex. : Paris Saint-Germain F.C.)</div>
        <div><label>Alternative names</label></div>
        @for (var i = 0; i < 10; i++)
        {
            var name = $"AlternativeName{i}";
            <div style="margin-top: 5px">
                <input type="text" name="@name" style="width: 250px" />
            </div>
        }
        <div style="font-size: smaller">(french name if different, and few alternatives: 3 or 4 in most cases)</div>
        <div style="font-size: smaller">(ex. : Paris SG, Paris, PSG, Paris Saint-Germain Football Club)</div>
        <div style="font-size: smaller">(don't mind diacritics, it will be considered equal)</div>
        <div style="margin-top: 10px">
            <input type="submit" name="submit-club" value="Create club" />
        </div>
    </form>