@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model KikoleSite.Models.ProposalChart
<div class="mediumTopMargin">
    @localizer["Rules"]
</div>
<div class="mediumTopMargin">
    @localizer["ScoreIntro"]
    <ul>
        <li>@Html.Raw(string.Format(localizer["StarterPoints"].Value, Model.BasePoints))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessName"].Value, Model.ProposalTypesCost[KikoleSite.Models.Enums.ProposalTypes.Name].points))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessClub"].Value, Model.ProposalTypesCost[KikoleSite.Models.Enums.ProposalTypes.Club].points))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessCountry"].Value, Model.ProposalTypesCost[KikoleSite.Models.Enums.ProposalTypes.Country].points))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessYear"].Value, Model.ProposalTypesCost[KikoleSite.Models.Enums.ProposalTypes.Year].points))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessPosition"].Value, Model.ProposalTypesCost[KikoleSite.Models.Enums.ProposalTypes.Position].points))</li>
        <li>@Html.Raw(string.Format(localizer["ClueGuess"].Value, Model.ProposalTypesCost[KikoleSite.Models.Enums.ProposalTypes.Clue].points))</li>
        <li>@Html.Raw(string.Format(localizer["GetLeaderboard"].Value, Model.ProposalTypesCost[KikoleSite.Models.Enums.ProposalTypes.Leaderboard].points))</li>
        <li>@localizer["GoodGuess"]</li>
    </ul>
</div>
<h4 id="country-rules">@localizer["AboutCountry"]</h4>
@localizer["AboutCountryDetails"]
<h4 id="clubs-rules">@localizer["AboutClubs"]</h4>
@localizer["AboutClubsDetails"]