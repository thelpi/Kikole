@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model KikoleSite.Api.ProposalChart
<div style="margin-top: 10px">
    @localizer["Rules"]
</div>
<div style="margin-top: 10px">
    @localizer["ScoreIntro"]
    <ul>
        <li>@Html.Raw(string.Format(localizer["StarterPoints"].Value, Model.BasePoints))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessName"].Value, Model.ProposalTypesCost[KikoleSite.Api.ProposalType.Name]))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessClub"].Value, Model.ProposalTypesCost[KikoleSite.Api.ProposalType.Club]))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessCountry"].Value, Model.ProposalTypesCost[KikoleSite.Api.ProposalType.Country]))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessYear"].Value, Model.ProposalTypesCost[KikoleSite.Api.ProposalType.Year]))</li>
        <li>@Html.Raw(string.Format(localizer["BadGuessPosition"].Value, Model.ProposalTypesCost[KikoleSite.Api.ProposalType.Position]))</li>
        <li>@Html.Raw(string.Format(localizer["ClueGuess"].Value, Model.ProposalTypesCost[KikoleSite.Api.ProposalType.Clue]))</li>
        <li>@localizer["GoodGuess"]</li>
    </ul>
</div>